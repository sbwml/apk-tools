# Contributor:
# Maintainer:
pkgname=test-e
pkgver=1.0
pkgrel=0
pkgdesc="Package E for apk-tools testsuite - package with trigger"
url="http://alpinelinux.org"
arch="noarch"
license="GPL"
depends=
makedepends=
triggers="test-e.trigger=/file-trigger"
subpackages=
source=""
builddir="$srcdir/$pkgname-$pkgver"

# append extra dependencies to -dev subpackage
# remove if not used.
# depends_dev="somepackage-dev"

prepare() {
	mkdir -p "$builddir"
}

build() {
	cd "$builddir"
	cat > $pkgname <<-EOF
		#!/bin/sh
		echo "hello from $pkgname-$pkgver"
	EOF
}

package() {
	cd "$builddir"
	install -Dm755 $pkgname "$pkgdir"/usr/bin/$pkgname
}

sha512sums="" #generate with 'abuild checksum'
